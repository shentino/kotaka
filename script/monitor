#!/bin/bash

cd ~/git/kotaka

exec < /dev/null
exec >> kotaka.err
exec 2>&1

function sighup
{
	echo "+++ Monitor received SIGHUP +++"
}

function sigterm
{
	echo "+++ Monitor received SIGTERM +++"
	trap - SIGTERM
	kill -TERM $DGDPID
	kill -TERM $$
}

function sigint
{
	echo "+++ Monitor received SIGINT +++"
	trap - SIGINT
	kill -KILL $DGDPID
	kill -INT $$
}

function boot
{
	rm -f state/swap
	if [ -f state/snapshot ]
	then
		echo "--- DGD warm booting ---"
		if [ -f state/snapshot.old ]
		then
			# both are present, possible incremental snapshot
			~/bin/dgd kotaka.dgd state/snapshot state/snapshot.old &
		else
			# only the full one
			~/bin/dgd kotaka.dgd state/snapshot &
		fi
	else
		if [ -f state/snapshot.old ]
		then
			# we only have the old one
			echo "--- DGD cool booting ---"
			~/bin/dgd kotaka.dgd state/snapshot.old &
		else
			# complete cold start
			echo "--- DGD cold booting ---"
			~/bin/dgd kotaka.dgd &
		fi
	fi
	DGDPID=$!
}

function exited
{
	case $DGDEXIT in
	0)
		echo "--- DGD terminated normally ---"
		;;
	*)
		echo "--- DGD terminated abnormally (code $DGDEXIT), monitor exiting ---"
		exit
		;;
	esac
}

function crashed
{
	if [ -f mud/core ]
	then
		rm -rf crash
		mkdir crash
		gdb dgd mud/core -batch -ex bt > crash/trace
		mv mud/core crash
		echo "+++ DGD terminated by SIG$SIGNAME (core dump processed) +++"
	else
		echo "+++ DGD terminated by SIG$SIGNAME +++"
	fi
}

function signalled
{
	SIGNAME=`kill -l $(( DGDEXIT - 128 ))`

	case $SIGNAME in
	KILL|TERM|INT)
		echo "+++ DGD terminated by SIG$SIGNAME, monitor exiting +++"
		exit
		;;
	*)
		crashed
		;;
	esac
}

trap sigterm SIGTERM
trap sigint SIGINT
trap sighup SIGHUP

while true
do
	boot
	wait $DGDPID
	DGDEXIT=$?

	if (( DGDEXIT < 128 ))
	then
		exited
	else
		signalled
	fi
done
